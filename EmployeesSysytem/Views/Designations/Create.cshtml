@model EmployeesSysytem.Models.Designation

@{
    ViewData["Title"] = "Create";
}


<div class="card">
    <div class="card-header"><h3>Add New Designation</h3></div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div>
                            <div class="form-group mx-2">
                                <input type="submit" value="Create Designation" class="btn btn-primary" />
                            </div>
                        </div>
                        <div>
                            <div class="form-group mx-2">
                                <a asp-action="Index" class="btn btn-warning">Back to List</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model EmployeesSysytem.Models.ViewModels.ProfileViewModel;
<div class="card">
    <div class="card-header"><h3>Assign User Roles</h3></div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="AssignRights">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RoleId" class="control-label"></label>
                                <select asp-for="RoleId" asp-items="ViewBag.Roles" class="form-control"></select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TaskId" class="control-label"></label>
                                <select asp-for="TaskId" asp-items="ViewBag.Tasks" class="form-control"></select>
                            </div>
                        </div>
                        <div class="form-group mx-2">
                            <input type="submit" value="Assign Rights" class="btn btn-primary" />
                        </div>
                        <div class="form-group mx-2">
                            <a asp-action="Index" class="btn btn-warning">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@model EmployeesSysytem.Models.ViewModels.UserViewModel;

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">

        <h3 class="card-title">User Details</h3>
    </div>
    <div class="col-md-12">
        <div class="row">
            <!-- /.card-header -->
            <div class="card-body col-md-6">
                <table id="example1" class="table table-bordered table-hover">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Id)
                        </td>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.FullName)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.FullName)
                        </td>
                        <th>
                            @Html.DisplayNameFor(model => model.RoleId)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.RoleId)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedById)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.CreatedById)
                        </td>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedOn)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.CreatedOn)
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedById)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedById)
                        </td>

                        <th>
                            @Html.DisplayNameFor(model => model.ModifiedOn)
                        </th>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedOn)
                        </td>
                    </tr>

                </table>
            </div>
        </div>
        <div class="my-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mx-2 ">Edit</a>
            <a asp-action="Index" class="btn btn-warning">Back to List</a>
        </div>
    </div>
</div>